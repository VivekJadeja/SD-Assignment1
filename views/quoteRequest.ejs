    <div class="row justify-content-center" style="padding-top: 1%;">
        <div class="card text-white bg-dark" style="width: 30rem; border: white solid 1px;">
            <div class="card-body" style="padding-top: 10px; padding-bottom: 7px;">
                <h3 class="card-title" style="text-align: center;">Quote Request Form</h3>
                <form method="POST" action="/requestQuote/" style="font-size: 20px;">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="gallons">Gallons Requested</label>
                            <input type="number" class="form-control" id="gallons" name="gallons" min="1" placeholder="1" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="date">Delivery Date</label>
                            <input type="date" id="date" name="date" min="<%= customer.cuDate %>" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address:</label>
                        <input type="text" name="address1" class="form-control" id="inputAddress" value="<%= customer.address1 %>" readonly>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress2">Address 2</label>
                        <input type="text" name="address2" class="form-control" id="inputAddress2" value="<%= customer.address2 %>" readonly>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputCity">City</label>
                            <input type="text" name="city" class="form-control" id="inputCity" value="<%= customer.city %>" readonly>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputState">State</label>
                            <input id="state" name="state" class="form-control" value="<%= customer.state %>" readonly>

                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputZip">Zip</label>
                            <input type="text" name="zipcode" class="form-control" id="inputZip" readonly value="<%= customer.zipcode %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="price">Suggested price per gallon</label>
                        <input class="form-control" id="price" name="price" type="text" placeholder="Use Get Quote button" value="" readonly>
                    </div>
                    <div class="form-group">
                        <label for="total">Total amount due</label>
                        <input class="form-control" type="text" id="total" name="total" placeholder="Use Get Quote button" value="" readonly>
                    </div>
                    <button type="button" style="margin-bottom: 10px;" onclick="showPrice()" id="getQuote" class="btn btn-primary btn-lg btn-block" disabled>Get Quote</button>
                    <div class="form-group">
                        <button id="submitQuote" type="submit" class="btn btn-primary btn-lg btn-block" disabled>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Vendor JS Files -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script>
        document.getElementById("gallons").onchange = function()
        {
            if(document.getElementById("gallons").value!== "" && document.getElementById("date").value!="")
                document.getElementById("getQuote").disabled = false;
            else
                document.getElementById("getQuote").disabled = true;
        }
 
        document.getElementById("date").onchange = function()
        {
            if(document.getElementById("gallons").value!== "" && document.getElementById("date").value!="")
                document.getElementById("getQuote").disabled = false;
            else
                document.getElementById("getQuote").disabled = true;
        }
 
        document.getElementById("gallons").onkeydown = function()
        {
                document.getElementById("submitQuote").disabled = true;
        }

        async function getPrice(gallons, state) {
        let response = await fetch(`http://localhost:3000/price/${gallons}/${state}`);
        let data = await response.json();
        return data;
      }
 
        showPrice = function()
        {
            let gallons = document.getElementById("gallons").value;
            let state = document.getElementById("state").value;
            getPrice(gallons, state).then(function(data)
            {
                document.getElementById("submitQuote").disabled = false;
                document.getElementById("price").value = '$ '+data.price;
                let total= data.price * gallons;
                document.getElementById("total").value = '$ '+total;
            });
        }
    </script>

